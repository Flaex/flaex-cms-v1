{
  "connection": "default",
  "collectionName": "article",
  "info": {
    "name": "article",
    "description": ""
  },
  "options": {
    "timestamps": [
      "createdAt",
      "updatedAt"
    ]
  },
  "attributes": {
    "title": {
      "required": true,
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "date": {
      "required": true,
      "type": "date"
    },
    "image": {
      "model": "file",
      "via": "related",
      "plugin": "upload",
      "required": true
    },
    "author": {
      "model": "user",
      "via": "articles",
      "plugin": "users-permissions"
    },
    "img_title": {
      "type": "string",
      "default": "Image title"
    },
    "img-alt": {
      "type": "string",
      "default": "Image short description"
    },
    "tag": {
      "type": "string"
    }
  }
}